{
	"compilerOptions": {
		"sourceMap": true,
		"rootDir": "../src",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"checkJs": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true
	},
	"exclude": [ "../tests", "../lib" ]
}